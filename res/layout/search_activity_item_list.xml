<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/search_item_selector"
              android:padding="5dp">
    <!--FEBE27-->
    <TextView
        android:id="@+id/poi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="沙井村幼儿园沙井村幼儿园沙井村幼儿园沙井村幼儿园沙井村幼儿园"
        android:textSize="16dp"
        android:layout_marginRight="75dp"
        android:textColor="@android:color/black"/>
    <TextView
            android:id="@+id/poi_address"
            android:textSize="12dp"
            android:layout_below="@id/poi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="太白南路科创路一号(沙井村)"
            android:textColor="#ffcccccc"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
    <TextView
            android:id="@+id/poi_distance"
            android:textSize="16dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/poi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.7333km"
            android:textColor="@android:color/black"/>
    <View
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_toLeftOf="@id/poi_distance"/>
</RelativeLayout>